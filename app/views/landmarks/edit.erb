<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form class="form" action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="landmark[name]">Landmark Name:</label>
  <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">
  <br>

  <label for="landmark[year_completed]">New Title: </label>
  <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed"><br>


  <br>
  <input type="submit" name="submit" value="Edit Landmark">
</form>

<br><br>

<a class="button" href="/landmarks">Landmarks</a>
