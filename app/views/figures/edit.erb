<h2>Edit Historical Figure</h2>

<!-- add content here -->
<form class="form" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="figure[name]">Figure Name:</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

  <h2>Titles:</h2>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
  <% end %>

  <h2>Landmarks:</h2>
  <% Landmark.all.each do |lm| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= lm.id %>" id="landmark_<%= lm.id %>" <%= 'checked' if @figure.landmarks.include?(lm) %>><%= lm.name %></input><br>
  <% end %>

  <br>

  <label for="title[name]">New Title: </label>
  <input type="text" name="title[name]" value="" id="new_title"><br>

  <label for="landmark[name]">New Landmark:</label>
  <input type="text" name="landmark[name]" value="" id="new_landmark"><br>

  <br>
  <input type="submit" name="submit" value="Edit Figure">
</form>

<br><br>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
